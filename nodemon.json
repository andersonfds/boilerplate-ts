{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules", "**.test.ts"],
    "verbose": false,
    "execMap": {
        "ts": "ts-node --compiler ttypescript"
    },
    "watch": ["src/"],
    "events": {
        "restart": "node -e console.clear()"
    },
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}
